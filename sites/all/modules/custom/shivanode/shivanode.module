/**
 * Performs a custom faceted search on the host site and returns both a list of all node id hits and kmap id facets (in the format, domain-kid)
 * Returns an array of all nids for hits and associative array of facets
 * 
 * This is done here using the Search API and SOLR backend modules to get the list of NIDs with hits. Then chunking that up into groups of
 * 100 nids each and calling the SOLR server with those nids and the given existing facets for the facet information.
 *
 * @param string $term ($qstr in original hook definition)
 *   The current search string.
 * 
 * @param array $kids
 *   The list of facet kmap ids.
 * 
 * @return array $qinfo
 *     An associative array with:
 *          "qids" => an array of all node ids that are hit by the query
 *          "facet_data" => an associative array of "kmapid" => facet counts
 * 
 */
function shivanode_node_facet_hits($term, $kmids="") {
     $kmout = (is_array($kmids)) ? implode(",", $kmids) : $kmids;
     $kmfilter = (!empty($kmids)) ? "kmapid:(" .  implode(' AND ', $kmids)  . ")" : "";
     $server = search_api_server_load('solr');
     $index = search_api_index_load('default_node_index');
     $query = new SearchApiQuery($index);
     $query->facetHitCounting = TRUE; // Used in shivanode_search_api_results_alter to prevent an infinite loop
     $query->keys($term);
     $res = $query->execute();
     $allnids = array_keys($res['results']);
     $nidchunks = array_chunk($allnids, 100);
     $kmfacets = array();
     $solrserv = variable_get('shanti_kmaps_admin_server_solr', SHANTI_KMAPS_ADMIN_SERVER_SOLR);
    
     foreach ($nidchunks as $n => $nids) {
         $solrurl = $solrserv . '/select?q=asset_type:visuals%20AND%20id:($NIDS$)&rows=0&facet=on&facet.field=kmapid&wt=json';
         $solrurl = str_replace('$NIDS$', implode('%20OR%20',$nids), $solrurl);
         $jstr = file_get_contents($solrurl);
         $json = json_decode($jstr);
         $kfraw = $json->facet_counts->facet_fields->kmapid;
         for ($n=0; $n < count($kfraw); $n += 2) {
             $ct = $kfraw[$n + 1];
             if ($ct > 0) {
                 if (isset($kmfacets[$kfraw[$n]])) {
                     $kmfacets[$kfraw[$n]] += $ct;
                 } else {
                     $kmfacets[$kfraw[$n]] = $ct;
                 }
             }
         }
     }
     return array('qids' => $allnids, 'facet_data' => $kmfacets);
}

