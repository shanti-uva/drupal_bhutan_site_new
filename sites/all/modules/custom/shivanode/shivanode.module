/**
 * Implements hook_search_api_results_alter in order to add the following JS settings for shanti_kmaps_facets
 * See README.md for shanti_kmaps_facets:
 * 
 *      core_search:            set to "true" to indicate a native search has been performed and facet data is provided 
 *      search_filter_data:   a JSON associative array of kmap_id:count pairs
 *      core_search_query:  a JSON encoding of the query parameters used in the search. In particular, this must have a "q" key set
 *                                      to the current query string. This is used to populate the search box when a page is loaded from a URL. 
 */
function shivanode_search_api_results_alter($results,  $query) {
    if (!empty($query->facetHitCounting)) { return; }  // prevent infinite loop from shivanode_node_facet_hits
    $qkeys = $query->getKeys();
    $qstr = $qkeys[0];
    $facetdata = shivanode_node_facet_hits($qstr);
    drupal_add_js(array('shanti_kmaps_facets' => array(
            'core_search' => TRUE,
            'search_filter_data' => json_encode($facetdata['facet_data']),
            'core_search_query' => json_encode(array( 'q' => $qstr)),
        )), 'setting');
}

