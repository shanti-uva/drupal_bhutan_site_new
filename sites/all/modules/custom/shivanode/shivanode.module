/**
 * shivanode_get_access_string($node): Returns "Public" or "Private" for the node given
 */
function shivanode_get_access_string($node) {
    $pvt = t('Private');
    $pbl = t('Public');
    
    if (is_numeric($node)) { $node = node_load($node); }    
    $ew = entity_metadata_wrapper('node', $node);
    $snacc = $ew->shivanode_access->value();
    if ($snacc < 4) { return $pvt; } // Check the shivanode access value first 4 = public
    $gca = $ew->group_content_access->value();
    switch ($gca) {
        case 2:
            return $pvt;
            break;
        
        case 1:
            return $pbl;
            break;
            
        default:
            $gp = $ew->field_og_collection_ref->value();
            if (!empty($gp->group_access['und'])) {
                $gpaccess = $gp->group_access['und'][0]['value'];
                if ($gpaccess == 1) { return $pvt; } else {return $pbl; }
             } else {
                 return $pbl;
             }
    }
}

/** 
 * Implement this function if you need to change the doc sent to the solr KM asset index. For now (2017-01-12) OK 
 *   Called from _shanti_kmaps_fields_get_solr_doc in shanti_kmaps_fields.module line 483
 **/
function shivanode_kmaps_fields_solr_doc_alter(&$solrdoc) {
   foreach ($solrdoc as $n => &$sdoc) {
       $node = node_load($sdoc['id']);
       $sdoc['asset_subtype'] = _get_shivanode_type($node);
       if ($sdoc['asset_subtype'] == 'Chart' || $sdoc['asset_subtype'] == 'Graph') {
           $sdoc['asset_subtype'] .= ":" .  _shivanode_get_subtype($node);
       }
       if (!empty($sdoc['summary'])) {
           $summ = substr(strip_tags($sdoc['summary'][0]), 0, 747);
           $sdoc['summary'][0] = substr($summ, 0, strrpos($summ, ' '));
           if (strlen($sdoc['summary'][0]) > 0) { $sdoc['summary'][0] .= '...';} else {  $sdoc['summary'][0] = ' '; }
       }
       if (!empty($sdoc['caption'])) {
           $capt = substr(strip_tags($sdoc['caption'][0]), 0, 137);
           $sdoc['caption'][0] = substr($capt, 0, strrpos($capt, ' '));
           if (strlen($sdoc['caption'][0]) > 0) { $sdoc['caption'][0] .= '...'; } else { $sdoc['caption'][0] = " ";}
